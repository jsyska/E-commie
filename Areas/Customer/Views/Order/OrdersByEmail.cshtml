@model List<ECommie.Models.Order>

<h2>Orders for email: @ViewBag.Email</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order No</th>
            <th>Name</th>
            <th>Phone No</th>
            <th>Email</th>
            <th>Address</th>
            <th>Order Date</th>
            <th>Order details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderNo</td>
                <td>@order.Name</td>
                <td>@order.PhoneNo</td>
                <td>@order.Email</td>
                <td>@order.Address</td>
                <td>@order.OrderDate</td>
                <td><a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-primary">View Details</a></td>
            </tr>
        }
    </tbody>
</table>
